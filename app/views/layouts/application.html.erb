<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Books Store" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="Books Store">
    <meta name="mobile-web-app-capable" content="yes">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>

<!-- NAVBAR -->
<nav class="navbar navbar-dark bg-dark navbar-expand-lg shadow-sm">
  <div class="container">

    <%= link_to "ðŸ“š Books Store", root_path, class: "navbar-brand fw-bold" %>

    <div class="d-flex align-items-center gap-2">

      <% if user_signed_in? %>
        <span class="text-light me-2">
          Hello, <strong><%= current_user.email.split("@")[0] %></strong>
        </span>

        <%= link_to "My Publishes",
            books_path(filter: "mine"),
            class: "btn btn-info btn-sm text-white" %>

        <%= button_to "Logout",
            destroy_user_session_path,
            method: :delete,
            class: "btn btn-danger btn-sm" %>

      <% else %>
        <%= link_to "Login", new_user_session_path, class: "btn btn-warning btn-sm" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-light btn-sm" %>
      <% end %>

    </div>
  </div>
</nav>


    <!-- FLASH MESSAGES -->
    <% if notice %>
      <div class="alert alert-success text-center m-3">
        <%= notice %>
      </div>
    <% end %>

    <% if alert %>
      <div class="alert alert-danger text-center m-3">
        <%= alert %>
      </div>
    <% end %>

    <!-- MAIN CONTENT (ONLY ONCE) -->
    <div class="container mt-4">
      <%= yield %>
    </div>

  </body>
</html>
