<%= form_with(model: @book, multipart: true, class: "needs-validation") do |form| %>

  <% if @book.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h5>
      <ul class="mb-0">
        <% @book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label fw-semibold" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter book title" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label fw-semibold" %>
    <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "Enter book description" %>
  </div>

  <div class="mb-3">
    <%= form.label :author, class: "form-label fw-semibold" %>
    <%= form.text_field :author, class: "form-control", placeholder: "Author name" %>
  </div>

  <div class="mb-3">
    <%= form.label :genre, class: "form-label fw-semibold" %>
    <%= form.text_field :genre, class: "form-control", placeholder: "Book genre" %>
  </div>

  <div class="mb-3">
    <%= form.label :price, class: "form-label fw-semibold" %>
    <%= form.number_field :price, step: 0.01, class: "form-control", placeholder: "0.00" %>
  </div>

  <div class="mb-3">
    <%= form.label :cover_image, "Upload Cover Image", class: "form-label fw-semibold" %>
    <%= form.file_field :cover_image, class: "form-control" %>
  </div>

  <div class="mb-4">
    <%= form.label :book_file, "Upload Book File (PDF)", class: "form-label fw-semibold" %>
    <%= form.file_field :book_file, class: "form-control" %>
  </div>

  <div class="d-grid">
    <%= form.submit "Save Book", class: "btn btn-primary btn-lg" %>
  </div>

<% end %>
