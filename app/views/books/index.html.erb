<div class="container mt-4">

<!-- HEADER -->
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="fw-bold">ðŸ“š Books</h1>
  <%= link_to "+ Publish New Book", new_book_path, class: "btn btn-primary" %>
</div>

<!-- FILTER BUTTONS (ABOVE PUBLISH BUTTON VISUALLY) -->
<div class="mb-4 d-flex gap-2">
  <%= link_to "All Books", books_path,
      class: "btn btn-outline-secondary btn-sm" %>

  <%= link_to "My Publishes",
      books_path(filter: "mine"),
      class: "btn btn-info btn-sm text-white" %>
</div>

  <!-- BOOK GRID -->
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">

    <% @books.each do |book| %>
      <div class="col">
        <div class="card h-100 shadow-sm">

          <!-- BIG COVER IMAGE -->
          <% if book.cover_image.attached? %>
            <%= image_tag book.cover_image,
                class: "card-img-top",
                style: "height: 180px; object-fit: cover;" %>
          <% else %>
            <div class="bg-light text-center p-5 text-muted">
              No Cover Image
            </div>
          <% end %>

          <div class="card-body">

            <h5 class="card-title mb-1 text-truncate">
              <%= book.title %>
            </h5>

            <% if book.user_id == current_user.id %>
              <span class="badge bg-primary mb-2">My Book</span>
            <% end %>

            <p class="mb-2">
              <span class="text-success fw-bold fs-6">
                <%= number_to_currency(book.price) %>
              </span>
            </p>

            <p class="card-text text-muted small">
              <%= truncate(book.description, length: 120) %>
            </p>

            <ul class="list-unstyled small mb-0">
              <li><strong>Author:</strong> <%= book.author %></li>
              <li><strong>Genre:</strong> <%= book.genre %></li>
              <li>
                <strong>Sold:</strong>
                <span class="badge bg-success">
                  <%= book.total_purchases %>
                </span>
              </li>
            </ul>

          </div>

          <!-- ACTION BUTTONS -->
          <div class="card-footer bg-light d-flex gap-2">
            <%= link_to "Show", book, class: "btn btn-success btn-sm w-100" %>
            <% if book.user_id == current_user.id %>
              <%= link_to "Edit", edit_book_path(book), class: "btn btn-warning btn-sm w-100" %>
              <%= button_to "Delete", book,
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: "btn btn-danger btn-sm w-100" %>
            <% end %>
          </div>

        </div>
      </div>
    <% end %>

  </div>
</div>
